@model IEnumerable<LayoutTry.ViewModel.TRListViewModel>

@{
    ViewData["Title"] = "票券徵求/售讓一覽表";
}

<h1>票券徵求/售讓一覽表</h1>

@using (Html.BeginForm())
{
    @Html.TextBox("txtKeyword", null, new { placeholder = "請輸入關鍵字", name = "txtKeyword"})
    <button type="submit" class="ms-2 btn btn-sm btn-outline-secondary">
        <i class="bi bi-search"></i>  演出查詢 
    </button>
   @*  <input type="submit" value="查詢" /> *@
}

@* <p>
    <a asp-action="Create">新增票券徵求/售讓</a>
</p> *@
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>序號</th>
            <th>
                @Html.DisplayNameFor(model => model.eventName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.MemberID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.TRStatus) *@
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @Html.DisplayNameFor(model => model.TRStatus)

                    </button>
                    <ul class="dropdown-menu" id="menu-filters">
                        @foreach (var item in Model)
                        {
                            <li><a class="dropdown-item" data-search="@item.strStatus">@Html.DisplayFor(modelItem => item.strStatus)</a></li>
                            
                        }
                    </ul>
                </div>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="post online-food">
        @{
            int count = 0;
            foreach (var item in Model)
            {
                count++;

                <tr >
                                            <td>@count</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.eventName)
                                            </td>
                                            
                                            <td>

                                                @Html.DisplayFor(modelItem => item.MemberID)
                                            </td>
                                            <td>
                                                <p class="font-monospace text-body-secondary">
                                                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                                                </p>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.strStatus)
                                            </td>
                                            <td>
                                                <a asp-action="Delete" asp-controller="TicketRequests" asp-route-id="@item.TicketRequestId" onclick="return confirm('確定要刪除嗎？')" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                            </td>
                                        </tr>
            }
        }
        
    </tbody>
    

</table>





