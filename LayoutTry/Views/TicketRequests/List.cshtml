    var posts = $('.post');
    (function ($) {
        $("#menu-filters a").click(function () {
            

            var selectedFilter = $(this).data("search");
            $(".online-food").fadeOut();
            setTimeout(function () {
                $("." + selectedFilter).fadeIn();
            }, 300);
        });
    })(jQuery);
</script>
