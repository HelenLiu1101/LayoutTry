@model IEnumerable<LayoutTry.ViewModel.TRListViewModel>

@{
    ViewData["Title"] = "票券徵求/售讓一覽表";
}

<h1>票券徵求/售讓一覽表</h1>

@using (Html.BeginForm())
{
    @Html.TextBox("txtKeyword", null, new { placeholder = "請輸入關鍵字" })
    <input type="submit" value="查詢" class="ms-2 btn btn-outline-secondary" />
}

<p>
    <a asp-action="Create">新增票券徵求/售讓</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>序號</th>
            <th>
                @Html.DisplayNameFor(model => model.eventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TRStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>編輯 | 刪除</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.eventName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.strStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                         
                        <a asp-action="Delete" asp-route-id="@item.TicketRequestId" onclick="return confirm('確定要刪除嗎？')" class="btn btn-outline-danger">刪除</a>
                                             
                    </td>
                </tr>
            }
}
    </tbody>
</table>
