@model IEnumerable<LayoutTry.Models.TicketRequest>


@{
    ViewData["Title"] = "票券徵求/售讓一覽表";
}

<h1>票券徵求/售讓一覽表</h1>
@using (Html.BeginForm())
{
    @Html.TextBox("txtKeyword", null, new { placeholder = "請輸入關鍵字" })
    <input type="submit" value="查詢" class="ms-2 btn btn-outline-secondary" />
}

<p>
    <a asp-action="Create">新增票券徵求/售讓</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>

            <th>序號</th>
            <th>演出名稱</th>
            <th>需求狀態</th>
            <th>上架日期</th>
            <th>編輯 | 刪除</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            for (int i = 0; i < 10; i++)
            {
                count++;
                <tr>

                    <td>@count</td>
                    <td>好了啦達康</td>
                    <td>未處理</td>
                    <td>2024/01/21</td>
                    <td>
                        <a asp-action="Edit">編輯</a> |

                        <a asp-action="Delete" style="color: #dd1450; font-weight: bold;">刪除</a>
                    </td>
                    @* <td>
            <a asp-action="Edit" asp-route-id="@item.TicketRequestId">編輯</a> |
            @* <a asp-action="Details" asp-route-id="@item.TicketRequestId">Details</a> | *@
                    @*<a asp-action="Delete" asp-route-id="@item.TicketRequestId">刪除</a>
            </td> *@
                </tr>
            }

        }
    </tbody>
</table>

